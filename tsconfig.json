{
  "compilerOptions": {
    // 与 Vue 的浏览器支持保持一致
    "target": "es2018",
    // 这可以对 `this` 上的数据 property 进行更严格的推断
    "strict": true,
    // 如果使用 webpack 2+ 或 rollup，可以利用 tree-shake:
    "module": "ESNext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "jsxFactory": "h",
    "jsx": "preserve",
    "rootDir": "./",
    "baseUrl": "./",
    "outDir": "./dist",
    "typeRoots": ["./typings"],
    "types": ["node"],
    "noImplicitThis":true,
    "sourceMap": true,
    "lib": ["DOM","DOM.Iterable","ESNext"],
    "paths": {
      "@js/*": ["./src/js/*"],
      "@api/*": ["./src/api/*"],
      "@css/*": ["./src/css/*"],
      "@assert/*": ["./src/assert/*"],
      "@component/*": ["./src/component/*"]
    },
  },
  "include": ["src/**/*", "typings/**/*"],
  "exclude": ["node_modules"],
}